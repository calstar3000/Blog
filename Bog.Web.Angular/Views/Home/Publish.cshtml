@{
	ViewData["Title"] = "New Post";
}

<div ng-controller="PublishController as newPost" class="row">
	<form novalidate>
		<label for="title">Title</label>
		<input type="text" ng-model="post.title" id="title" name="title" class="u-full-width" placeholder="A long time ago," />
		<label for="body">Body</label>
		<textarea ng-model="post.body" id="body" name="body" class="u-full-width" placeholder="in a galaxy far far away…"></textarea>
		<input type="submit" ng-click="newPost.publish(post)" class="button-primary" value="Publish">
	</form>
</div>
